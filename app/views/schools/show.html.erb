 
  <p id="notice"><%= notice %></p>
  <%= link_to "Back to #{@tournament.name}", "/tournaments/#{@tournament.id}",:class=>"btn btn-default" %> 
  <% if can? :manage, @school %>
  | <%= link_to "Edit #{@school.name}", edit_school_path(@school),:class=>"btn btn-primary" %>
  <% end %>

